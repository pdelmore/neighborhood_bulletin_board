<div class="wrapper">

  <div class="post-details-box">
    <h2>Post Details</h2>

    <br>

    <h3>Title:</h3>
    <p><%= @post_details.title %></p>
    <br>
    <h3>Post:</h3>
    <p><%= @post_details.body %></p>
    <br>
    <div class="link">
      <a href="/delete_post/<%= @post_details.id %>">Delete this post</a>
    </div>
  </div>

  <div class="edit-post-box">
    <h2>Edit this post</h2>

    <form action="/post/edit/<%= @post_details.id %>">
      <label for="title_edit">Title:</label><br>
      <textarea id="title_edit" type="text" name="query_edited_title" placeholder="Edit your post title here..." rows="2" cols="60"></textarea>
      <br>
      <label for="edit_post">Post body:</label><br>
      <textarea rows="10" cols="60" id="edit_post" type="text" name="query_edited_body" placeholder="Edit your post here..."></textarea>
      <br>
      <button class="button">Submit</button>
    </form>

  </div>

</div>

<hr>

<div class="comments-box">

  <div class="comment-list">
    <h3>Comments</h3>

    <table border="1px">
      <tr>
        <th>Comment</th>
        <th>Created</th>
        <th></th>
      </tr>
      <tr>
        <td>comment title</td>
        <td>created on</td>
        <td><a href="">delete</a></td>
      </tr>
    </table>

  </div>

  <div class="new-comment">
    <h3>Add a new comment</h3>

    <form action="">
      <label for="comment"></label>
      <textarea rows="10" cols="60" id="comment" type="text" name="new_comment" placeholder="Type your comment here..."></textarea>
      <br>
      <button class="button">Submit</button>
    </form>

  </div>

</div>
